{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": ".",
        "outDir": "./build",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2018", "dom"]
    },
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
